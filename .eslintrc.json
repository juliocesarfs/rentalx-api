{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
				"plugin:@typescript-eslint/recommended",
				"plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
				"prettier"
    ],
    "rules": {
			"no-use-before-define": "off",
			"no-console": "off",
			"import/prefer-default-export": "off",
			"no-shadow": "off",
			"no-useless-constructor":"off",
			"class-methods-use-this":"off",
			"@typescript-eslint/no-use-before-define": [
				"error"
			],
	   	"import/extensions": [
	      "error",
	      "ignorePackages",
	      {
	        "ts": "never"
	      }
	    ],
			"linebreak-style": "off",
			"prettier/prettier": [
				"error",
				{
					"endOfLine": "auto"
				}
			]
	  },
	  "settings": {
	    "import/resolver": {
	      "typescript": {}
	    }
	  } 
}